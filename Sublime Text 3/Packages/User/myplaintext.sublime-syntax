%YAML 1.2
---
# http://www.sublimetext.com/docs/3/syntax.html
name: My Plain Text
file_extensions: [txt]
scope: source.txt
contexts:
  main:
    # Line starting with # as comment
    - match: '(^\s*\#.*$)'
      captures:
        1: punctuation.definition.comment

    # Words surrounded by ?
    - match: '(\?.+?\?)'
      captures:
        1: variable.language

    # Words surrounded by square brackets
    - match: '(\[.+?\])'
      captures:
        1: keyword.operator.word
