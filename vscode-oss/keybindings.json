[
    // Navigation
    { "key": "ctrl+home", "command": "cursorTop", "when": "textInputFocus" },
    { "key": "ctrl+end", "command": "cursorBottom", "when": "textInputFocus" },
    { "key": "ctrl+right", "command": "cursorWordEndRight", "when": "textInputFocus" },
    { "key": "ctrl+left","command": "cursorWordLeft", "when": "textInputFocus" },
    { "key": "ctrl+up", "command": "cursorMove", "args": { "to": "prevBlankLine" }, "when": "editorTextFocus" },
    { "key": "ctrl+down", "command": "cursorMove", "args": { "to": "nextBlankLine" }, "when": "editorTextFocus" },
    { "key": "ctrl+enter", "command": "editor.action.goToDeclaration", "when": "editorTextFocus" },
    { "key": "cmd+left", "command": "workbench.action.navigateBack", "when": "canNavigateBack" },
    { "key": "cmd+right", "command": "workbench.action.navigateForward", "when": "canNavigateForward" },
    { "key": "ctrl+e", "command": "editor.action.jumpToBracket", "when": "editorTextFocus" },
    { "key": "ctrl+l", "command": "workbench.action.gotoLine" },
    { "key": "ctrl+g", "command": "editor.action.moveSelectionToNextFindMatch", "when": "editorFocus" },
    { "key": "shift+ctrl+g", "command": "editor.action.moveSelectionToPreviousFindMatch", "when": "editorFocus" },

    // Selection
    { "key": "shift+ctrl+end", "command": "cursorBottomSelect", "when": "textInputFocus" },
    { "key": "shift+ctrl+home", "command": "cursorTopSelect", "when": "textInputFocus" },
    { "key": "shift+ctrl+right", "command": "cursorWordEndRightSelect", "when": "textInputFocus" },
    { "key": "shift+ctrl+left", "command": "cursorWordLeftSelect", "when": "textInputFocus" },
    { "key": "shift+cmd+down", "command": "cursorColumnSelectDown", "when": "textInputFocus" },
    { "key": "shift+cmd+up", "command": "cursorColumnSelectUp", "when": "textInputFocus" },
    { "key": "shift+ctrl+up", "command": "cursorMove", "args": { "to": "prevBlankLine", "select": true }, "when": "editorTextFocus" },
    { "key": "shift+ctrl+down", "command": "cursorMove", "args": { "to": "nextBlankLine", "select": true }, "when": "editorTextFocus" },
    { "key": "shift+ctrl+e", "command": "editor.action.smartSelect.expand", "when": "editorTextFocus" },
    { "key": "ctrl+d", "command": "editor.action.addSelectionToNextFindMatch", "when": "editorFocus" },
    { "key": "shift+ctrl+d", "command": "editor.action.selectHighlights", "when": "editorFocus" },
    { "key": "ctrl+a", "command": "editor.action.selectAll" },

    // Editing
    { "key": "ctrl+k", "command": "editor.action.deleteLines", "when": "editorFocus" },
    { "key": "ctrl+u", "command": "editor.action.transformToUppercase", "when": "textInputFocus" },
    { "key": "shift+ctrl+u", "command": "editor.action.transformToLowercase", "when": "textInputFocus" },
    { "key": "ctrl+c", "command": "execCopy" },
    { "key": "ctrl+x", "command": "execCut" },
    { "key": "ctrl+v", "command": "execPaste" },
    { "key": "ctrl+z", "command": "undo" },
    { "key": "shift+ctrl+z", "command": "redo" },
    { "key": "ctrl+y", "command": "redo" },
    { "key": "ctrl+s", "command": "workbench.action.files.save" },
    { "key": "shift+ctrl+s", "command": "workbench.action.files.saveAs" },
    { "key": "ctrl+backspace", "command": "deleteWordPartLeft", "when": "textInputFocus && !editorReadonly" },
    { "key": "ctrl+delete", "command": "deleteWordPartRight", "when": "textInputFocus && !editorReadonly" },
    { "key": "ctrl+/", "command": "editor.action.commentLine", "when": "editorTextFocus && !editorReadonly" },
    { "key": "f9", "command": "editor.action.sortLinesAscending" },

    // Tabs/Groups/Windows
    { "key": "ctrl+w", "command": "workbench.action.closeActiveEditor" },
    { "key": "ctrl+w", "command": "workbench.action.closeGroup", "when": "activeEditorGroupEmpty && multipleEditorGroups" },
    { "key": "shift+ctrl+t", "command": "workbench.action.reopenClosedEditor" },
    { "key": "cmd+q", "command": "workbench.action.closeWindow" },
    { "key": "ctrl+t", "command": "workbench.action.files.newUntitledFile" },
    { "key": "ctrl+n", "command": "workbench.action.newWindow" },
    { "key": "cmd+pageUp", "command": "workbench.action.moveEditorLeftInGroup" },
    { "key": "cmd+pageDown", "command": "workbench.action.moveEditorRightInGroup" },
    { "key": "shift+ctrl+cmd+left", "command": "workbench.action.moveEditorToPreviousGroup" },
    { "key": "shift+ctrl+cmd+right", "command": "workbench.action.moveEditorToNextGroup" },
    { "key": "ctrl+cmd+left", "command": "workbench.action.focusLeftGroup" },
    { "key": "ctrl+cmd+right", "command": "workbench.action.focusRightGroup" },
    { "key": "shift+cmd+2", "command": "workbench.action.newGroupRight" },
    { "key": "shift+ctrl+tab", "command": "workbench.action.previousEditorInGroup" },
    { "key": "ctrl+tab", "command": "workbench.action.nextEditorInGroup" },

    // View
    { "key": "shift+cmd+w", "command": "editor.action.toggleWordWrap" },
    { "key": "shift+cmd+0", "command": "workbench.action.zoomReset" },
    { "key": "shift+cmd+=", "command": "workbench.action.zoomIn" },
    { "key": "shift+cmd+-", "command": "workbench.action.zoomOut" },

    // Other
    { "key": "ctrl+f", "command": "actions.find", "when": "editorFocus || editorIsOpen" },
    { "key": "ctrl+p", "command": "workbench.action.quickOpen" },
    { "key": "shift+ctrl+p", "command": "workbench.action.showCommands" },
    { "key": "f2", "command": "renameFile" },
    { "key": "ctrl+o", "command": "breadcrumbs.focusAndSelect", "when": "breadcrumbsPossible && breadcrumbsVisible" },
    { "key": "ctrl+`", "command": "workbench.actions.view.problems", "when": "workbench.panel.markers.view.active" },
]
